rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to PDF documents
    match /pdfs/{document=**} {
      allow read: if true;
      allow write: if true; // In a production app, you would restrict this
    }
    
    // Allow access to books collection
    match /books/{document=**} {
      allow read: if true;
      allow write: if true; // In a production app, you would restrict this
    }
  }
}