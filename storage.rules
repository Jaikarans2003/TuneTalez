rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /books/thumbnails/{allPaths=**} {
      allow read: if true; // Allow public read
      allow write: if request.auth != null; // Or your preferred write rule
    }
    
    // Specific rules for books and pdfs
    match /books/thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
    
    match /pdfs/{allPaths=**} {
      allow read: if true;
      allow write: if true;
    }
  }
}